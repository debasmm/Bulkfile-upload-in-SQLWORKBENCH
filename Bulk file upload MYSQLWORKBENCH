Create database if not exists DM_SAMPLE;
USE DM_SAMPLE ;

CREATE TABLE IF NOT EXISTS BANK (
age INT ,
job VARCHAR(30) ,
marital VARCHAR(10) ,
education VARCHAR(10) ,
`default` VARCHAR(5) ,
balance INT ,
housing VARCHAR(30) ,
loan VARCHAR(30) ,
contact VARCHAR(20) ,
`day` INT ,
`month` VARCHAR(30) ,
duration INT , 
campaign INT  ,
pdays INT  , 
previous INT  , 
poutcome VARCHAR(30)  , 
y VARCHAR(30) ) ;

LOAD DATA local INFILE  "D:/bank-full.CSV"
INTO TABLE BANK
FIELDS TERMINATED BY ';'
ENCLOSED BY '"'
LINES TERMINATED BY '\n'
IGNORE 1 ROWS;

SELECT * FROM BANK
DESCRIBE BANK

select distinct job from bank ;
 SELECT  MIN(BALANCE) FROM BANK ;
 
 
 
SELECT * FROM BANK WHERE BALANCE=(SELECT MIN(BALANCE) FROM BANK) ;
SELECT COUNT(*) FROM BANK ;
SELECT MAX(BALANCE) FROM BANK;
SELECT * FROM BANK WHERE BALANCE = (SELECT MAX(BALANCE) FROM BANK) ;
SELECT AVG(BALANCE) FROM BANK;
SELECT * FROM BANK WHERE (MARITAL="SINGLE" AND BALANCE > 5000) LIMIT 2;
SELECT * FROM BANK WHERE LOAN = 'YES';
SELECT * FROM BANK ORDER BY AGE ;
SELECT * FROM BANK ORDER BY AGE  DESC ;
